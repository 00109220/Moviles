<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_money_amount"
        android:layout_width="275dp"
        android:layout_height="39dp"
        android:layout_marginTop="52dp"
        android:text="@string/money_amount"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Text_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:hint="@string/amount"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_money_amount" />

    <ImageView
        android:id="@+id/five_cents"
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ten_cents"
        app:layout_constraintTop_toTopOf="@+id/ten_cents"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/ten_cents"
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toStartOf="@+id/five_cents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_amount"
        app:srcCompat="@drawable/five_cents" />

    <TextView
        android:id="@+id/textView_five_cents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/five_cents"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ten_cents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ten_cents"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents" />

    <TextView
        android:id="@+id/textView_ten_cents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/ten_cents"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/five_cents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/five_cents"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents" />

    <ImageView
        android:id="@+id/quarter_cents"
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toStartOf="@+id/dollar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_five_cents"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/dollar"
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quarter_cents"
        app:layout_constraintTop_toBottomOf="@+id/textView_ten_cents"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/textView_quarter_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quarter_cents"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/quarter_cents"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/quarter_cents"
        app:layout_constraintTop_toBottomOf="@+id/quarter_cents" />

    <TextView
        android:id="@+id/textView_one_dollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_dollar"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dollar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/dollar"
        app:layout_constraintTop_toBottomOf="@+id/dollar" />




</androidx.constraintlayout.widget.ConstraintLayout>